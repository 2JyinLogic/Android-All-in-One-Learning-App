<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearLayoutCustomDialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/editTextDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Dialog Title"/>

        <EditText
            android:id="@+id/editTextDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Dialog Message"/>

        <EditText
            android:id="@+id/editTextDialogButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Button Text"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
